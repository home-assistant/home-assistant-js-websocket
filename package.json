{
  "name": "home-assistant-js-websocket",
  "type": "module",
  "sideEffects": false,
  "version": "5.2.3",
  "description": "Home Assistant websocket client",
  "source": "lib/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/haws.umd.js",
  "module": "dist/index.js",
  "repository": {
    "url": "https://github.com/home-assistant/home-assistant-js-websocket.git",
    "type": "git"
  },
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc && rollup dist/index.js --format umd --name HAWS --file dist/haws.umd.js",
    "test": "tsc && mocha",
    "prepublishOnly": "rm -rf dist && yarn build && npm test"
  },
  "author": "Paulus Schoutsen <paulus@paulusschoutsen.nl>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/assert": "^1.4.7",
    "@types/mocha": "^7.0.2",
    "assert": "^2.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "reify": "^0.20.12",
    "rollup": "^2.12.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write"
    ]
  }
}
